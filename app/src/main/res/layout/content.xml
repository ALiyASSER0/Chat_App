<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Cart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_15sdp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Imaggg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        tools:src="@drawable/image1"
android:elevation="@dimen/_5sdp"

        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
android:padding="@dimen/_3sdp"
     android:layout_margin="@dimen/_3sdp"
      app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
      android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="I am chat"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_7sdp"
android:layout_marginStart="@dimen/_7sdp"
        app:layout_constraintStart_toEndOf="@+id/Imaggg"
        app:layout_constraintTop_toTopOf="@+id/Imaggg" />
    <TextView
        android:id="@+id/partChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     android:layout_marginStart="@dimen/_7sdp"
        tools:text="5/9/2023"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintStart_toEndOf="@+id/Imaggg"
        app:layout_constraintTop_toBottomOf="@+id/name" />
    <TextView
      android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="12:46 AM"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        app:layout_constraintTop_toTopOf="@+id/Imaggg"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Imag2"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        tools:src="@drawable/green1"
        android:layout_marginTop="@dimen/_7sdp"
           android:layout_marginEnd="@dimen/_7sdp"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time"/>
    <TextView
        android:id="@+id/text_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
android:textSize="@dimen/_10sdp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/Imag2"
app:layout_constraintStart_toStartOf="@id/Imag2"
       app:layout_constraintTop_toTopOf="@+id/Imag2"
       app:layout_constraintBottom_toBottomOf="@+id/Imag2"
        />
</androidx.constraintlayout.widget.ConstraintLayout>